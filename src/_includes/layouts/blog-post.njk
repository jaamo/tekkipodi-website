<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% if title %}{{ title }} | {% endif %}{{ site.title }}</title>
    {% if description %}
    <meta name="description" content="{{ description }}">
    {% endif %}
    <link rel="canonical" href="{{ site.url }}{{ page.url }}">
    <link rel="icon" type="image/png" href="/images/favicon.png">
    <link rel="apple-touch-icon" href="/images/favicon.png">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="article">
    <meta property="og:title" content="{% if title %}{{ title }} | {% endif %}{{ site.title }}">
    <meta property="og:description" content="{% if description %}{{ description }}{% else %}{{ site.tagline }}{% endif %}">
    <meta property="og:image" content="/images/cover.jpg">
    {% if date %}
    <meta property="article:published_time" content="{{ date | dateFormat('iso') }}">
    {% endif %}

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{% if title %}{{ title }} | {% endif %}{{ site.title }}">
    <meta name="twitter:description" content="{% if description %}{{ description }}{% else %}{{ site.tagline }}{% endif %}">
    <meta name="twitter:image" content="/images/cover.jpg">

    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/vendor/cookieconsent.css">

    <!-- Google Analytics (loads only when analytics cookies accepted) -->
    <script type="text/plain" data-category="analytics" src="https://www.googletagmanager.com/gtag/js?id=G-8CRQ3XK9BP"></script>
    <script type="text/plain" data-category="analytics">
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-8CRQ3XK9BP');
    </script>
</head>
<body>
    <header class="site-header">
        <div class="header-container">
            <a href="/" class="header-logo">
                <img src="{{ site.logo }}" alt="{{ site.title }} Logo">
            </a>
            <a href="{{ site.podcastLinks.spotify }}" target="_blank" rel="noopener noreferrer" class="header-spotify-button">
                <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
                    <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.84-.179-.84-.66 0-.359.24-.66.54-.779 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.242 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.78-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.42 1.56-.299.421-1.02.599-1.559.3z"/>
                </svg>
                Kuuntele
            </a>
        </div>
    </header>

    <main>
        <div class="slice slice--black slice--bottom-decoration">

            <div class="container pt-l">
                <article class="episode">
                    <header class="episode-header">
                        <h1 class="episode-title">{{ title }}</h1>
                        {% if description %}
                        <p class="episode-description">{{ description }}</p>
                        {% endif %}
                        <div class="episode-meta">
                            {% if spotify %}
                            <a href="{{ spotify }}" target="_blank" rel="noopener noreferrer" class="episode-spotify-link">
                                <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
                                    <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.84-.179-.84-.66 0-.359.24-.66.54-.779 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.242 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.78-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.42 1.56-.299.421-1.02.599-1.559.3z"/>
                                </svg>
                                Kuuntele
                            </a>
                            {% endif %}
                            {% if length %}
                            <span class="episode-length">
                                <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
                                    <path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
                                </svg>
                                {{ length }}
                            </span>
                            {% endif %}
                            {% if date %}
                            <span class="episode-date">
                                <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
                                    <path d="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM7 10h5v5H7z"/>
                                </svg>
                                {{ date | dateFormat("MMMM d, yyyy") }}
                            </span>
                            {% endif %}
                        </div>
                    </header>

                    <div class="content content--white">
                        {{ content | safe }}
                    </div>
                </article>
            </div>
        </div>

        <div class="slice slice--white">
            <div class="container pt-xl pb-l">
                <div id="guestbook-widget" data-disable-episode="false" data-filter-url="{{ page.url }}"></div>
                <script src="{{ env.guestbookWidgetUrl }}"></script>
            </div>
        </div>

    </main>

    <footer>
        <div class="slice slice--black slice--top-decoration">
            <div class="container pt-xl pb-l">
                <div class="platforms platforms--white">
                    <a href="{{ site.podcastLinks.spotify }}" target="_blank" rel="noopener noreferrer" class="platform-icon" aria-label="Listen on Spotify">
                        <img src="/images/logo-spotify.svg" alt="Spotify">
                    </a>
                    <a href="{{ site.podcastLinks.apple }}" target="_blank" rel="noopener noreferrer" class="platform-icon" aria-label="Listen on Apple Podcasts">
                        <img src="/images/icon-apple.svg" alt="Apple Podcasts">
                    </a>
                    <a href="{{ site.podcastLinks.youtube }}" target="_blank" rel="noopener noreferrer" class="platform-icon" aria-label="Listen on YouTube">
                        <img src="/images/logo-youtubemusic.svg" alt="YouTube Music">
                    </a>
                    <a href="{{ site.podcastLinks.rss }}" target="_blank" rel="noopener noreferrer" class="platform-icon" aria-label="RSS Feed">
                        <img src="/images/icon-rss.svg" alt="RSS Feed">
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script src="/vendor/cookieconsent.umd.js"></script>
    <script src="/js/cookieconsent-config.js"></script>
</body>
</html>

